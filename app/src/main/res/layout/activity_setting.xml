<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/BackgroundColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#dddddd"
            android:orientation="horizontal"
            android:baselineAligned="false">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="2dp"
                    android:layout_margin="1dp"
                    android:background="@drawable/setting_border"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="@string/bible"
                    android:layout_gravity="center"
                    android:textSize="28sp" />
                <LinearLayout
                    android:gravity="center"
                    android:layout_margin="2dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="@string/bibleName_size"
                        android:layout_gravity="center"
                        android:textSize="24sp" />
                    <TextView
                        android:id="@+id/bibleName_size_down"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="@string/minus"
                        android:textColor="#012345"
                        android:textStyle="bold"
                        android:textSize="24sp" />
                    <TextView
                        android:id="@+id/bibleName_size"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="@string/number"
                        android:textStyle="bold"
                        android:textSize="24sp" />
                    <TextView
                        android:id="@+id/bibleName_size_up"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="@string/plus"
                        android:textColor="#012345"
                        android:textStyle="bold"
                        android:textSize="24sp" />
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:layout_margin="2dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="@string/scripture_size"
                        android:layout_gravity="center"
                        android:textSize="24sp" />
                    <TextView
                        android:id="@+id/scripture_size_down"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="@string/minus"
                        android:textColor="#012345"
                        android:textStyle="bold"
                        android:textSize="24sp" />
                    <TextView
                        android:id="@+id/scripture_size"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="@string/number"
                        android:textStyle="bold"
                        android:textSize="24sp" />
                    <TextView
                        android:id="@+id/scripture_size_up"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="@string/plus"
                        android:textColor="#012345"
                        android:textStyle="bold"
                        android:textSize="24sp" />
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:layout_margin="2dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="@string/keyword_size"
                        android:layout_gravity="center"
                        android:textSize="24sp" />
                    <TextView
                        android:id="@+id/keyword_size_down"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="@string/minus"
                        android:textColor="#012345"
                        android:textStyle="bold"
                        android:textSize="24sp" />
                    <TextView
                        android:id="@+id/keyword_size"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="@string/number"
                        android:textStyle="bold"
                        android:textSize="24sp" />
                    <TextView
                        android:id="@+id/keyword_size_up"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="@string/plus"
                        android:textColor="#012345"
                        android:textStyle="bold"
                        android:textSize="24sp" />
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:layout_margin="2dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="@string/crossing_size"
                        android:layout_gravity="center"
                        android:textSize="24sp" />
                    <TextView
                        android:id="@+id/crossing_size_down"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="@string/minus"
                        android:textColor="#012345"
                        android:textStyle="bold"
                        android:textSize="24sp" />
                    <TextView
                        android:id="@+id/crossing_size"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="@string/number"
                        android:textStyle="bold"
                        android:textSize="24sp" />
                    <TextView
                        android:id="@+id/crossing_size_up"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="@string/plus"
                        android:textColor="#012345"
                        android:textStyle="bold"
                        android:textSize="24sp" />
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:layout_margin="2dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="@string/verse_space_size"
                        android:layout_gravity="center"
                        android:textSize="24sp" />
                    <TextView
                        android:id="@+id/verse_space_size_down"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="@string/minus"
                        android:textColor="#012345"
                        android:textStyle="bold"
                        android:textSize="24sp" />
                    <TextView
                        android:id="@+id/verse_space_size"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="@string/number"
                        android:textStyle="bold"
                        android:textSize="24sp" />
                    <TextView
                        android:id="@+id/verse_space_size_up"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="@string/plus"
                        android:textColor="#012345"
                        android:textStyle="bold"
                        android:textSize="24sp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="2dp"
                    android:layout_margin="1dp"
                    android:background="@drawable/setting_border"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="@string/hymn"
                    android:layout_gravity="center"
                    android:textSize="28sp" />
                <LinearLayout
                    android:gravity="center"
                    android:padding="4dp"
                    android:layout_margin="4dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:gravity="end|center_vertical"
                        android:layout_height="wrap_content"
                        android:text="@string/show_hymn_sheet"
                        android:layout_gravity="center"
                        android:textSize="24sp" />
                    <CheckBox
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/hymn_sheet_check"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:padding="4dp"
                    android:layout_margin="4dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:gravity="end|center_vertical"
                        android:layout_height="wrap_content"
                        android:text="@string/show_hymn_lyric"
                        android:layout_gravity="center"
                        android:textSize="24sp" />
                    <CheckBox
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/hymn_lyric_check"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/hymn_lyric_set"
                    android:gravity="center"
                    android:padding="4dp"
                    android:layout_margin="4dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="@string/hymn_lyric_size"
                        android:layout_gravity="center"
                        android:textSize="24sp" />
                    <TextView
                        android:id="@+id/hymn_lyric_size_down"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="@string/minus"
                        android:textColor="#012345"
                        android:textStyle="bold"
                        android:textSize="24sp" />
                    <TextView
                        android:id="@+id/hymn_lyric_size"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="@string/number"
                        android:textStyle="bold"
                        android:textSize="24sp" />
                    <TextView
                        android:id="@+id/hymn_lyric_size_up"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="@string/plus"
                        android:textColor="#012345"
                        android:textStyle="bold"
                        android:textSize="24sp" />
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:padding="4dp"
                    android:layout_margin="4dp"
                    android:orientation="horizontal"
                    android:background="@drawable/setting_border"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="6"
                        android:gravity="end|center_vertical"
                        android:layout_height="wrap_content"
                        android:text="@string/keep_screen_on"
                        android:layout_gravity="center"
                        android:textSize="24sp" />
                    <CheckBox
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/keep_screen_check"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:padding="4dp"
            android:layout_margin="4dp"
            android:background="@drawable/setting_border"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="@string/bibleBookMark"
            android:layout_gravity="center"
            android:textSize="28sp" />

        <LinearLayout
            android:gravity="center"
            android:layout_margin="2dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/bookmark_bible0"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:gravity="end|center_vertical"
                android:layout_height="wrap_content"
                android:text="@string/bibleBookMark"
                android:layout_gravity="center_vertical|end"
                android:textSize="20sp" />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bookmark_check0"/>
            <TextView
                android:id="@+id/bookmark_bible1"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:gravity="end|center_vertical"
                android:layout_height="wrap_content"
                android:text="@string/bibleBookMark"
                android:layout_gravity="center"
                android:textSize="20sp" />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bookmark_check1"/>
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_margin="2dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/bookmark_bible2"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:gravity="end|center_vertical"
                android:layout_height="wrap_content"
                android:text="@string/bibleBookMark"
                android:layout_gravity="center_vertical|end"
                android:textSize="20sp" />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bookmark_check2"/>
            <TextView
                android:id="@+id/bookmark_bible3"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:gravity="end|center_vertical"
                android:layout_height="wrap_content"
                android:text="@string/bibleBookMark"
                android:layout_gravity="center"
                android:textSize="20sp" />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bookmark_check3"/>
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_margin="2dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/bookmark_bible4"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:gravity="end|center_vertical"
                android:layout_height="wrap_content"
                android:text="@string/bibleBookMark"
                android:layout_gravity="center_vertical|end"
                android:textSize="20sp" />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bookmark_check4"/>
            <TextView
                android:id="@+id/bookmark_bible5"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:gravity="end|center_vertical"
                android:layout_height="wrap_content"
                android:text="@string/bibleBookMark"
                android:layout_gravity="center"
                android:textSize="20sp" />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bookmark_check5"/>
        </LinearLayout>
        <TextView
            android:id="@+id/build_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:background="@color/LawnGreen"
            android:layout_gravity="center"
            android:textSize="14sp" />

    </LinearLayout>

</ScrollView>