<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="MenuStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#3c50c1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">0sp</item>
        <item name="android:paddingRight">0sp</item>
        <item name="android:paddingBottom">8sp</item>
        <item name="android:paddingTop">8sp</item>
        <item name="android:background">#808080</item>
    </style>
    <style name="exitButton" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">0sp</item>
        <item name="android:paddingRight">0sp</item>
        <item name="android:paddingBottom">0sp</item>
        <item name="android:paddingTop">0sp</item>
        <item name="android:background">#808080</item>
    </style>

</resources>
