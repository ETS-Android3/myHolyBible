<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="MenuStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/MenuForeColor</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">0sp</item>
        <item name="android:paddingRight">0sp</item>
        <item name="android:paddingBottom">4sp</item>
        <item name="android:paddingTop">4sp</item>
        <item name="android:background">@color/MenuBackColor</item>
    </style>
    <style name="exitButton" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">0sp</item>
        <item name="android:paddingRight">0sp</item>
        <item name="android:paddingBottom">0sp</item>
        <item name="android:paddingTop">0sp</item>
        <item name="android:background">@color/MenuBackColor</item>
    </style>

</resources>
